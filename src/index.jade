extends layout

// toolbar svg markup
block hamburgerSvg
    | <svg version="1.1" id="hamburgerSvg" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px"
    | y="0px" viewBox="0 0 25 25" enable-background="new 0 0 25 25" xml:space="preserve">
    | <line fill="none" stroke="#000000" stroke-miterlimit="10" x1="2.9" y1="2.5" x2="22.3" y2="2.5"/>
    | <line fill="none" stroke="#000000" stroke-miterlimit="10" x1="2.9" y1="12.5" x2="22.3" y2="12.5"/>
    | <line fill="none" stroke="#000000" stroke-miterlimit="10" x1="2.9" y1="22.5" x2="22.3" y2="22.5"/>
    | </svg>

block application
    body.app(itemprop="mainContentOfPage")

        .app_toolbar
            .app_toolbar_hamburger
                block hamburgerSvg

        nav.app_tabs
            a(href="#").app_tabs_tab TAB1
            a(href="#").app_tabs_tab TAB2
            a(href="#").app_tabs_tab TAB3

        .app_signIn
            p.app_signIn_text Login

        .app_connectionType
            p.app_connectionType_text Secured

        section.app_section(itemscope, itemtype="https://schema.org/RegisterAction")
            h3.app_section_form_title(itemprop="name") Register
            form.app_section_form(method="post", action="index.html", accept-charset="utf-8")
                include form.jade
                h4.app_section_form_agreementLink
                    | agreement &nbsp
                    a(href="#", itemprop="url") Link
                input#contact-submit.submit(
                    name="submit_form",
                    value="SUBMIT",
                    type="submit",
                    itemprop="target"
                )
                h4.app_section_form_note *Additional

        footer.app_footer
            nav.app_footer_nav
                a.app_footer_nav_item NEWS
                a.app_footer_nav_item ABOUT
                a.app_footer_nav_item DATA
                a.app_footer_nav_item AGB

        .app_footer-copyright &copy;trybynenko