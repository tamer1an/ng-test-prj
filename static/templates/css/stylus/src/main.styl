/* Virtual Keypad module style */

/* Configs */
corporate-border-color = #E3E3E3

buttonsStyle(n)
  border-bottom 1px solid darkgrey
  border-left  1px solid rgb(147, 141, 141)
  border-right 1px solid #d3d3d3
  border-top   1px solid #d3d3d3

lcdStyle(n)
  -webkit-box-shadow inset 0px 1px 2px 1px #B9B9B9;
  -moz-box-shadow    inset 0px 1px 2px 1px #B9B9B9;
  box-shadow         inset 0px 1px 2px 1px #B9B9B9;
  background rgb(180,227,145)
  background -moz-linear-gradient(top,  rgba(180,227,145,1) 0%, rgba(97,196,25,1) 50%, rgba(180,227,145,1) 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(180,227,145,1)), color-stop(50%,rgba(97,196,25,1)), color-stop(100%,rgba(180,227,145,1)))
  background -webkit-linear-gradient(top,  rgba(180,227,145,1) 0%,rgba(97,196,25,1) 50%,rgba(180,227,145,1) 100%)
  background -o-linear-gradient(top,  rgba(180,227,145,1) 0%,rgba(97,196,25,1) 50%,rgba(180,227,145,1) 100%)
  background -ms-linear-gradient(top,  rgba(180,227,145,1) 0%,rgba(97,196,25,1) 50%,rgba(180,227,145,1) 100%)
  background linear-gradient(to bottom,  rgba(180,227,145,1) 0%,rgba(97,196,25,1) 50%,rgba(180,227,145,1) 100%)
  border 1px solid grey

/* Loader circle */
loaderStyle(n)
  z-index 101
  margin 6em auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 1.1em solid rgba(131, 229, 141, 0.25)
  border-right 1.1em solid rgba(131, 229, 141, 0.25)
  border-bottom 1.1em solid rgba(131, 229, 141, 0.25)
  border-left 1.1em solid #A0C2A2
  -webkit-animation load8 1.1s infinite linear
  animation load8 1.1s infinite linear

.loader,
.loader:after
  border-radius 50%
  width 10em
  height 10em


/* Animations configuration */
@-webkit-keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg);

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)


@keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg);

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

/* Keypad button callback animation */
@-moz-keyframes button-callback
  from
    opacity 1
    border  1px solid darkmagenta

  75%
    opacity 0.5
    border  1px solid darkmagenta

  to
    opacity 1
    border-bottom 1px solid #a9a9a9
    border-left   1px solid #d3d3d3
    border-right  1px solid #d3d3d3
    border-top    1px solid #d3d3d3

@-webkit-keyframes button-callback
  from
    opacity 1
    border  1px solid darkmagenta

  75%
    opacity 0.5
    border  1px solid darkmagenta

  to
    opacity 1
    border-bottom 1px solid #a9a9a9
    border-left   1px solid #d3d3d3
    border-right  1px solid #d3d3d3
    border-top    1px solid #d3d3d3

