/* Virtual Keypad module style */

/* Configs */
corporate-border-color = #E3E3E3

/* Loader circle */
loaderStyle(n)
  z-index 101
  margin 6em auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 1.1em solid rgba(131, 229, 141, 0.25)
  border-right 1.1em solid rgba(131, 229, 141, 0.25)
  border-bottom 1.1em solid rgba(131, 229, 141, 0.25)
  border-left 1.1em solid #A0C2A2
  -webkit-animation load8 1.1s infinite linear
  animation load8 1.1s infinite linear

.loader,
.loader:after
  border-radius 50%
  width 10em
  height 10em


/* Animations configuration */
@-webkit-keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg);

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)


@keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg);

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

.admin-crud
  position absolute
  top 8px
  left 8px

  .admin-crud-component
    width 200px

    button
      border 1px solid rgb(72, 73, 72)
      margin-right 2px
      padding 3px
      font-size 10px
      font-weight bold
      opacity 0.7
      float left

    p
      width 120px
      color #ffffff
      float right

.search
  float right
  margin-left 50px
